<h1>Editing hour</h1>

<% form_for(@hour) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :project_id %><br />
    <%= f.text_field :project_id %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :log_date %><br />
    <%= f.date_select :log_date %>
  </p>
  <p>
    <%= f.label :from %><br />
    <%= f.time_select :from %>
  </p>
  <p>
    <%= f.label :to %><br />
    <%= f.time_select :to %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @hour %> |
<%= link_to 'Back', hours_path %>
