<fieldset>
  <div class="ez-box">
    
    <% form_for(@hour) do |f| %>
    
    <p>
      <%= f.label :project_id %><br />
      <%= f.select(:project_id, Project.all.collect{|p| [p.name, p.id]}) %>
      <%- if @hour.errors.on(:project_id) -%>
      <span class="error">Project <%= @hour.errors.on(:project_id) %></span>
      <%- end -%>
    </p>
    
    <p>
      <%= f.label :activity_id %><br />
      <%= f.select(:activity_id, Activity.all.collect{|a| [a.name, a.id]}) %>
      <%- if @hour.errors.on(:activity_id) -%>
      <span class="error">Activity <%= @hour.errors.on(:activity_id) %></span>
      <%- end -%>
    </p>
    
    <p>
      <%= f.label :log_date %><br />
      <%= f.date_select :log_date %>
      <%- if @hour.errors.on(:log_date) -%>
      <span class="error">Log Date<%= @hour.errors.on(:log_date) %></span>
      <%- end -%>
    </p>
    
    <p>
      <%= f.label :from %><br />
      <%= f.time_select :from %>
      <%- if @hour.errors.on(:from) -%>
      <span class="error">From <%= @hour.errors.on(:from) %></span>
      <%- end -%>
    </p>
    
    <p>
      <%= f.label :to %><br />
      <%= f.time_select :to %>
      <%- if @hour.errors.on(:to) -%>
      <span class="error">To <%= @hour.errors.on(:to) %></span>
      <%- end -%>
    </p>
    
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description, :cols => 35 %>
      <%- if @hour.errors.on(:description) -%>
      <span class="error">Description <%= @hour.errors.on(:description) %></span>
      <%- end -%>
    </p>
    
    <p>
      <%= f.submit 'Create' %>
    </p>
    
    <% end %>
    
    <%= link_to 'Back', hours_path %>
    
  </div>
</fieldset>
