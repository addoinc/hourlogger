<div class="ez-fl ez-negmr ez-75">
  
  <div class="ez-box">
    
    <% form_for([:admin, @activity]) do |f| %>
    
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
      <%- if @activity.errors.on(:name) -%>
      <span class="error">Name <%= @activity.errors.on(:name) %></span>
      <%- end -%>
    </p>
    
    <p>
      <%= f.submit 'Create' %>
    </p>
    
    <% end %>
    
    <%= link_to 'Back', admin_activities_path %>
    
  </div>
  
</div>
