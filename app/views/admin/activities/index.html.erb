<div class="ez-fl ez-negmr ez-75">
  
  <div class="ez-box">
    
    <h1>All Activities</h1>
    
    <table>
	<tr>
	  <th>Activity Namme</th>
 	  <th>Actions</th>
	</tr>
	
	<%- @activities.each do |activity| -%>
	<tr>
	  <td><%=h activity.name %></td>
	  <!-- <td><%#= link_to 'Show', admin_activity_path(activity) %></td> -->
	  <td><%= link_to 'Edit', edit_admin_activity_path(activity) %></td>
	  <td><%= link_to 'Destroy', admin_activity_path(activity), :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<%- end -%>
    </table>
    
    <br />
    
    <%= link_to "Add New Activity", new_admin_activity_path %>
    
  </div>
  
</div>
